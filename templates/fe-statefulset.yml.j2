---

- kind: DeploymentConfig
  apiVersion: v1
  metadata:
    name: patterneer-fe
  spec:
    replicas: 1
    selector:
      name: patterneer-fe
    template:
      metadata:
        labels:
          name: patterneer-fe
      spec:
        serviceAccountName: weyyu
        nodeSelector:
          type: patterneer
        imagePullSecrets:
        - name: gitlab-matildapeak

        initContainers:

        # An init-container to wait for the Manager...
        - image: registry.gitlab.com/matilda.peak/patterneer-fe:${TAG}
          name: patterneer-fe-manager-wait
          command:
          - './manager_wait.py'
          env:
          # Manager details...
          - name: PFE_MANAGER_ADDR
            value: ${MANAGER_ADDR}
          - name: PFE_MANAGER_PORT
            value: ${MANAGER_PORT}
          - name: PFE_MANAGER_API
            value: ${MANAGER_API}

        # An init-container to wait for our database...
        - image: registry.gitlab.com/matilda.peak/patterneer-fe:${TAG}
          name: patterneer-fe-db-wait
          command:
          - './db_wait.py'
          env:
          # Patterneer (FE) Database name and user details...
          - name: PFE_DB_NAME
            valueFrom:
              secretKeyRef:
                name: patterneer-secrets
                key: db-name
          - name: PFE_DB_PASSWORD
            valueFrom:
              secretKeyRef:
                name: patterneer-secrets
                key: db-password
          - name: PFE_DB_USER
            valueFrom:
              secretKeyRef:
                name: patterneer-secrets
                key: db-user
          # Postgres details...
          - name: PG_ADDR
            valueFrom:
              secretKeyRef:
                name: patterneer-secrets
                key: pg-addr
          - name: PG_PORT
            valueFrom:
              secretKeyRef:
                name: patterneer-secrets
                key: pg-port

        containers:

        # The Patterneer FE container...
        - name: patterneer-fe
          ports:
          - name: django
            containerPort: 8000
            protocol: TCP
          readinessProbe:
            initialDelaySeconds: 30
            timeoutSeconds: 2
            tcpSocket:
              port: 8000
          livenessProbe:
            timeoutSeconds: 2
            initialDelaySeconds: 45
            tcpSocket:
              port: 8000
          resources:
            requests:
              cpu: 50m
              memory: 100Mi
            limits:
              cpu: 1000m
              memory: 200Mi
          env:
          # Django demo users details...
          - name: PFE_ABC_PASSWORD
            valueFrom:
              secretKeyRef:
                name: patterneer-secrets
                key: fe-abc-password
          - name: PFE_EAM_PASSWORD
            valueFrom:
              secretKeyRef:
                name: patterneer-secrets
                key: fe-eam-password
          # Django superuser details...
          - name: PFE_SUPERUSER_NAME
            valueFrom:
              secretKeyRef:
                name: patterneer-secrets
                key: fe-superuser-name
          - name: PFE_SUPERUSER_PASSWORD
            valueFrom:
              secretKeyRef:
                name: patterneer-secrets
                key: fe-superuser-password
          - name: PFE_SUPERUSER_EMAIL
            valueFrom:
              secretKeyRef:
                name: patterneer-secrets
                key: fe-superuser-email
          # Patterneer (FE) Database name and user details...
          - name: PFE_DB_NAME
            valueFrom:
              secretKeyRef:
                name: patterneer-secrets
                key: db-name
          - name: PFE_DB_PASSWORD
            valueFrom:
              secretKeyRef:
                name: patterneer-secrets
                key: db-password
          - name: PFE_DB_USER
            valueFrom:
              secretKeyRef:
                name: patterneer-secrets
                key: db-user
          # Django secrets/config
          - name: PFE_DJANGO_SECRET_KEY
            valueFrom:
              secretKeyRef:
                name: patterneer-secrets
                key: django-secret-key
          - name: PFE_DJANGO_DEBUG
            value: ${DJANGO_DEBUG}
          # Postgres details...
          - name: PG_ADDR
            valueFrom:
              secretKeyRef:
                name: patterneer-secrets
                key: pg-addr
          - name: PG_PORT
            valueFrom:
              secretKeyRef:
                name: patterneer-secrets
                key: pg-port
          # Manager details...
          - name: PFE_MANAGER_ADDR
            value: ${MANAGER_ADDR}
          - name: PFE_MANAGER_PORT
            value: ${MANAGER_PORT}
          - name: PFE_MANAGER_API
            value: ${MANAGER_API}
          # Runner details...
          - name: PFE_RUNNER_PORT
            value: ${RUNNER_PORT}
          - name: PFE_RUNNER_API
            value: ${RUNNER_API}
          # Django logging...
          - name: PFE_DJANGO_LOG_LEVEL
            value: ${DJANGO_LOG_LEVEL}
